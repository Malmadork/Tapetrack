<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="/js/mobilenav/search.js" defer></script>
<script src="/js/referrer.js" defer></script>
<script src="/js/renderAlbumReviews.js" type="module"></script>
<link href="/css/albumReviews.css" rel="stylesheet">

<div class="content">
  <div class="section">
    <div class="heading">
        <h2 class="album-name"></h2>
    </div>
  </div>
  <div class="section-filter">
    <div class="dropdown">
      <i class="bi bi-filter-square-fill" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" data-filter="recent">Most Recent</a>
        <a class="dropdown-item" data-filter="oldest">Oldest</a>
        <a class="dropdown-item" data-filter="high">Score (Highest)</a>
        <a class="dropdown-item" data-filter="low">Score (Lowest)</a>
      </div>
    </div>
  </div>
  <div class="section section-reviews" id="reviewsList" data-albumId="{{albumId}}">
      
    </div>
</div>

<template id="review-template">
    <div class="user-review">
        <div class="ranking-username">
            <h4 class="review-username">Username</h4>
            <div class="review-ranking">
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </div>
            
        </div>
        <div class="review-text">
            <p></p>
        </div>
    </div>
</template>